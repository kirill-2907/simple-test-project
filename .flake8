[flake8]
# Maximum line length
max-line-length = 88

# Ignored errors
extend-ignore = 
    E203,
    W503,
    E501,
    F401

# Excluded directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info

# Ignore specific errors in certain files
per-file-ignores =
    __init__.py:F401
    tests/*:E501,W503

# McCabe settings (cyclomatic complexity)
max-complexity = 10
